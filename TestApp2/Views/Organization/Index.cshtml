@{
    ViewData["Title"] = "Organizations";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<button type="button" id="submit" name="submit" class="btn btn-primary pull-right">Add Organization</button>

<div class="container">
    <div class="col-md-5">
        <div class="form-area">
            <form role="form">
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Add Organization</h3>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" id="org-name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" id="org-email" name="email" placeholder="Start Date" required>
                </div>
                <div class="form-group">
                    <label>Website</label>
                    <input type="url" class="form-control" id="org-website" name="website" placeholder="https://facebook.com/events/..." required>
                </div>
                <div class="form-group">
                    <label>Number</label>
                    <input type="tel" class="form-control" id="org-num" name="contact number" placeholder="+60123467890" required>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <textarea class="form-control" type="textarea" id="org-address" placeholder="Address" maxlength="140" rows="7"></textarea>
                    @*<span class="help-block"><p id="characterLeft" class="help-block ">You have reached the limit</p></span>*@
                </div>
                <div class="form-group">
                    <label>Logo</label>
                    <input type="file" class="form-control" id="org-logo" name="organization's' logo" placeholder="Logo" required>
                </div>
                <button type="button" id="submit" name="submit" class="btn btn-primary pull-right">Submit Form</button>
            </form>
        </div>
    </div>
</div>
